<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context="br.com.kaiquetavaresreinodasilva.nacdado.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Vitorias"
            android:textColor="@color/branco"
            android:strokeWidth="1"
            android:gravity="center"
            android:layout_weight="0.16"/>
        <TextView
            android:id="@+id/tvVitoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/branco"
            android:strokeWidth="1"
            android:gravity="center"
            android:layout_weight="0.16"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Empates"
            android:textColor="@color/branco"
            android:strokeWidth="1"
            android:gravity="center"
            android:layout_weight="0.16"/>
        <TextView
            android:id="@+id/tvEmpate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textColor="@color/branco"
            android:strokeWidth="1"
            android:layout_weight="0.16"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Derrotas"
            android:textColor="@color/branco"
            android:strokeWidth="1"
            android:gravity="center"
            android:layout_weight="0.16"/>
        <TextView
            android:id="@+id/tvDerrota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/branco"
            android:strokeWidth="1"
            android:gravity="center"
            android:layout_weight="0.16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivPlayer"
            android:background="@drawable/dice01"
            android:layout_marginRight="60dp"/>

        <ImageView
            android:id="@+id/ivPC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/dice02" />
        
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Jogar"
        android:layout_margin="12dp"
        android:id="@+id/btPlay"/>


</LinearLayout>
